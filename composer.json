{
    "name": "caravan/inexphone-sms-laravel",
    "description": "Laravel package for InexPHONE SMS API integration with Saloon and Laravel Data",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "sms", "inexphone", "otp", "georgia"],
    "authors": [
        {
            "name": "Caravan",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "saloonphp/saloon": "^3.0",
        "spatie/laravel-data": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Caravan\\InexPhoneSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Caravan\\InexPhoneSms\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Caravan\\InexPhoneSms\\InexPhoneSmsServiceProvider"
            ],
            "aliases": {
                "InexPhoneSms": "Caravan\\InexPhoneSms\\Facades\\InexPhoneSms"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
